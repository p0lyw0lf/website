---
import { Image } from "astro:assets";
import { STATIC_URL } from "../data/url";

export interface HeaderPfpProps {
  /**
   * Relative to https://static.wolfgirl.dev/pfps/
   */
  src: string;
  /**
   * Alt text for the image
   */
  alt: string;
}

type Props = HeaderPfpProps;

const { src, alt } = Astro.props;
---

<a href="/art/">
  <Image
    src={new URL(`/pfps/${src}`, STATIC_URL).toString()}
    layout={"fixed"}
    width={128}
    height={128}
    widths={[128, 256]}
    quality="max"
    loading={"eager"}
    alt={alt}
  />
</a>

<style>
  a {
    display: flex;
  }
</style>
